<!-- Form for a new post, containing a text field for the Title, a date entry field, and a text area for a longer description-->
<h1> New Post </h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%=form.label "title" %>
    <%=form.text_field "title" %>
  </p>
  <p>
    <%=form.label "posted_on" %>
    <%=form.date_field "posted_on"%>
  </p>
  <p>
    <%=form.label "description" %>
    <%=form.text_area "description" %>
  </p>
  <%= form.hidden_field "place_id" %>
  <!--Submit the form -->
  <%= form.submit %>
  

<% end %>
